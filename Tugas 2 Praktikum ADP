    write('Jumlah= ');
    readln(Jumlah);
    harga:=6000;
    total_harga:=harga*jumlah;
    write('Total Harga= ',total_harga);
    end;
    
    if (minuman=4) then begin writeln('Sop Buah');
    write('Jumlah= ');
    readln(jumlah);
    harga:=10000;
    total_harga:=harga*jumlah;
    write('Total Harga= ',total_harga);
    end;
    
    writeln('                  ');
    writeln('Terima Kasih Telah Berkunjung');
    writeln('☆•°Silahkan Datang Kembali°•☆');
