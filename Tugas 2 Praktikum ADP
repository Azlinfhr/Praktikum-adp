    writeln('|3. Capcin           |');
    writeln('|4. Sop Buah         |');
    writeln('|====================|');
    write('input minuman= ');
    readln(minuman);
    
    if (minuman=1) then begin writeln('Teh Es'); 
    write('Jumlah= ');
    readln(jumlah);
    harga:=10000;
    total_harga:=harga*jumlah;
    write('Total Harga= ',total_harga);
    end;
    
    if (minuman=2) then begin writeln('Matcha Latte'); 
    write('Jumlah= ');
    readln(Jumlah);
    harga:=20000;
    total_harga:=harga*jumlah;
    write('Total Harga= ',total_harga);
    end;
    
