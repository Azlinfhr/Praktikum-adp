    write('Jumlah= ');
    readln(jumlah);
    harga:=15000;
    total_harga:=harga*jumlah;
    write('Total Harga= ',total_harga);
    end;
    
    if (makanan=4) then begin writeln('Mie Becek');
    write('Jumlah= ');
    readln(jumlah);
    harga:=10000;
    total_harga:=harga*jumlah;
    write('Total Harga= ',total_harga);
    end;
    
